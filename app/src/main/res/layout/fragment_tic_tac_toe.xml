<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicTacToe">

    <Button
        android:id="@+id/button_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_2"
        app:layout_constraintBottom_toTopOf="@id/button_4"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:backgroundTint="@color/gray"
        android:layout_marginStart="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60sp"/>

    <Button
        android:id="@+id/button_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/button_1"
        app:layout_constraintStart_toEndOf="@id/button_1"
        app:layout_constraintEnd_toStartOf="@id/button_3"
        app:layout_constraintBottom_toBottomOf="@id/button_1"
        android:backgroundTint="@color/gray"
        android:layout_marginStart="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60sp"/>

    <Button
        android:id="@+id/button_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/button_1"
        app:layout_constraintStart_toEndOf="@id/button_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/button_1"
        android:backgroundTint="@color/gray"
        android:layout_marginHorizontal="10dp"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60sp"/>

    <Button
        android:id="@+id/button_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_1"
        app:layout_constraintStart_toStartOf="@id/button_1"
        app:layout_constraintEnd_toEndOf="@id/button_1"
        app:layout_constraintBottom_toTopOf="@id/button_7"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:backgroundTint="@color/gray"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60sp"/>

    <Button
        android:id="@+id/button_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/button_4"
        app:layout_constraintStart_toStartOf="@id/button_2"
        app:layout_constraintEnd_toEndOf="@id/button_2"
        app:layout_constraintBottom_toBottomOf="@id/button_4"
        android:backgroundTint="@color/gray"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60sp"/>

    <Button
        android:id="@+id/button_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/button_4"
        app:layout_constraintStart_toStartOf="@id/button_3"
        app:layout_constraintEnd_toEndOf="@id/button_3"
        app:layout_constraintBottom_toBottomOf="@id/button_4"
        android:backgroundTint="@color/gray"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60sp"/>

    <Button
        android:id="@+id/button_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/button_4"
        app:layout_constraintStart_toStartOf="@id/button_1"
        app:layout_constraintEnd_toEndOf="@id/button_1"
        app:layout_constraintBottom_toTopOf="@id/game_state"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:backgroundTint="@color/gray"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60sp"/>

    <Button
        android:id="@+id/button_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/button_7"
        app:layout_constraintStart_toStartOf="@id/button_2"
        app:layout_constraintEnd_toEndOf="@id/button_2"
        app:layout_constraintBottom_toBottomOf="@id/button_7"
        android:backgroundTint="@color/gray"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60sp"/>

    <Button
        android:id="@+id/button_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/button_7"
        app:layout_constraintStart_toStartOf="@id/button_3"
        app:layout_constraintEnd_toEndOf="@id/button_3"
        app:layout_constraintBottom_toBottomOf="@id/button_7"
        android:backgroundTint="@color/gray"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="60sp"/>

    <TextView
        android:id="@+id/game_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/button_1"
        app:layout_constraintTop_toBottomOf="@id/button_7"
        app:layout_constraintEnd_toStartOf="@id/reset"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Playing"
        android:textSize="40sp"
        android:layout_marginVertical="20dp"/>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/game_state"
        app:layout_constraintStart_toEndOf="@id/game_state"
        app:layout_constraintEnd_toEndOf="@id/button_9"
        app:layout_constraintBottom_toBottomOf="@id/game_state"
        android:text="Reset"
        android:textSize="25sp"
        android:backgroundTint="@color/gray"/>

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginVertical="16dp"
        android:textSize="16sp"
        android:text="Exit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_1"
        android:padding="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
